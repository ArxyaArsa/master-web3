<script>
    $(document).ready(function () {
        let $modal = $(window.Suppliers.selectors.Modal).data('modaljsobj');
        $modal.assignSaveCallback(function () {
            $('.add-edit-supplier-form-container-@(uid) form.add-edit-supplier-form').submit();
